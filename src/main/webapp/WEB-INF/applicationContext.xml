    <!--<context:component-scan base-package="com.aiztone.hulk.service"/>-->
    <!--<context:component-scan base-package="com.aiztone.hulk.dao"/>-->
    <!--<context:component-scan base-package="com.aiztone.hulk.cache"/>-->

</beans>